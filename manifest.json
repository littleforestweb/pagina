{
    "name": "Page Inspector - LittleForest UK",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Page Inspector - LittleForest UK",
    "browser_action": {
        "default_title": "Page Inspector - LittleForest UK",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    }
}