{
    "name": "Page Inspector - LittleForest UK",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Page Inspector - LittleForest UK",
    "browser_action": {
        "default_title": "Page Inspector - LittleForest UK",
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ]
}