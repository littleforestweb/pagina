{
    "name": "Page Inspector - LittleForest UK",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Page Inspector - LittleForest UK",
    "browser_action": {
        "default_title": "Page Inspector - LittleForest UK",
        "default_icon": "icon.png"
    },
    "permissions": [
        "<all_urls>",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}